{
    "name": "weph/obsidian-tools",
    "description": "A collection of tools I use to operate on my Obsidian vault",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Weph\\ObsidianTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Weph\\ObsidianTools\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Philip Weinke",
            "email": "hello@philip-weinke.de"
        }
    ],
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^5.6",
        "friendsofphp/php-cs-fixer": "^3.8",
        "captainhook/captainhook": "^5.10",
        "psalm/plugin-phpunit": "^0.18"
    },
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "ergebnis/front-matter": "^0.4.0",
        "symfony/finder": "^6.0",
        "amenadiel/jpgraph": "^4.1",
        "symfony/dotenv": "6.2.x-dev"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
